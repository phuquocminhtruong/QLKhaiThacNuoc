@model IEnumerable<DOLPHIN.Model.ToTrinh>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<span class="badge bg-primary" style="font-size:20px ; margin-left:20px"><a href="/ToTrinh/Create">Thêm tờ trình mới</a></span>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách tờ trình</h3>

        <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th class="text-center">
                        Mã tờ trình
                    </th>
                    <th class="text-center">
                        Tên tờ trình
                    </th>
                    <th class="text-center">
                        Ngày tạo
                    </th>
                    <th class="text-center">
                        Tổ chức
                    </th>
                    <th class="text-center">
                        Vị tí khai thác
                    </th>
                    <th class="text-center">
                        Tầng chưa nước khai thác
                    </th>
                    <th class="text-center">
                        Ngày ban hành
                    </th>
                    <th class="text-center">
                        Trạng thái
                    </th>
                    <th class="text-center">
                        Thao tác
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.TenToTrinh) 
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.NgayTao) 
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ToChuc.TenToChuc) 
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.DonViHanhChinh.TenDonViHanhChinh) 
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.TangChuaNuocKhaiThac) 
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.NgayBanHanh) 
                        </td>
                        <td class="text-center">
                            @if (item.TrangThai == 0)
                            {
                                <span class="badge bg-warning">Chờ duyệt</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Đã duyệt</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.TrangThai == 0)
                            {
                                <span class="badge bg-warning"><a href="/ToTrinh/Update/@item.Id">Xử lý</a></span>
                            }
                            <span class="badge bg-success"><a href="/ToTrinh/Details/@item.Id">Chi tiết</a></span>
                            <span class="badge bg-danger"><a href="/ToTrinh/Delete/@item.Id">Xóa</a></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-sm-12 col-md-5">
                <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">Hiển thị: @Model.Count() bản ghi</div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>